{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "typescript",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@wdio/sync"
    ],
    "types": [
      "node",
      "cucumber",
      "@wdio/sync",
      "chai"
    ]
  },
  "exclude": [
    "node_modules",
    "typescript"
  ]
}